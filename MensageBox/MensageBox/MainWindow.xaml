        <Button x:Name="msgTituloBotoesIcone" Content="Mensagem Com Titulo, Botões e Icone" HorizontalAlignment="Left" Margin="27,227,0,0" VerticalAlignment="Top" Width="392" Height="43" Grid.ColumnSpan="2" Click="msgTituloBotoesIcone_Click"/>

    </Grid>
</Window>
